<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DH | CREATE</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/create.css">
</head>
<body>
    <%- include ("../partials/navigation") %>
    <form action="/product/save" method="post" id="create-form" enctype="multipart/form-data">
        <fieldset>
            <label for="image">Image</label>
            <input type="file" name="image" id="image">
        </fieldset>

        <fieldset>
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
        </fieldset>
    <fieldset>
        <label for="brand">Brand</label>
        <select name="brand" id="brand">
            <option value="" selected disabled>Chouse One</option>
            <% brands.forEach(brand => { %>
                <option value="<%= brand.id %>">
                    <%= brand.name %>
                </option>
            <% }) %>
        </select>
    </fieldset>
    <fieldset>
        <label for="colors">Colors</label>
        <select name="colors" id="colors" multiple>
            <% colors.forEach(color => { %>
                <option value="<%= color.id %>" style="<%= `background-color:${color.value};`%>">
                    <%= color.name %>
                </option>
            <% }) %>
        </select>
    </fieldset>
    <fieldset>
        <button type="submit">Send</button>
    </fieldset>
    </form> 
</body>
</html>